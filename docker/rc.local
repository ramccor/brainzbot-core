#!/bin/bash

function log() {
   printf "%(%Y-%m-%d %H:%M:%S %Z)T rc.local: "
   echo $@
}

log "Hello, this is rc.local. CONTAINER_NAME is $CONTAINER_NAME, and DEPLOY_ENV is $DEPLOY_ENV"

if [ "${CONTAINER_NAME}" = "brainzbot-web-${DEPLOY_ENV}" ]
then
    log Enabling web
    rm -f /etc/service/uwsgi/down
fi

if [ "${CONTAINER_NAME}" = "brainzbot-plugins-${DEPLOY_ENV}" ]
then
    log Enabling plugins
    rm -f /etc/service/plugins/down
fi
