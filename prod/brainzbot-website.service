[Unit]
Description=brainzbot website
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/srv/www/brainzbot/brainzbot-core
EnvironmentFile=-/srv/www/brainzbot/brainzbot-core/.env
ExecStart=/srv/www/brainzbot/venv/bin/uwsgi --ini /srv/www/brainzbot/brainzbot-core/prod/uwsgi.ini
Restart=always
KillSignal=SIGQUIT
TimeoutStopSec=5
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
